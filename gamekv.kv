<StringBox>:
	font_size: self.width / 1.5
	background_normal: ''
	background_down: ''
	canvas.before:
		Color:
			rgba:
				(.5, .5, .5, .5) if self.background_color==app.blank_color and self.text!='' \
				else (.5, .5, .5, .5) if self.background_color==app.blank_color \
				else self.background_color
		Line:
			width: 2
			rectangle: (self.x, self.y, self.width, self.height)

<StringButton@Button>:
	background_normal: ''
	background_down: ''
	background_color: app.keyboard_default_color
	# keys colors
	color: (0, 0, 0, 1) if self.background_color==app.keyboard_default_color else (1, 1, 1, 1)
	font_size: self.width / 1.5

<EnterButton@StringButton>:
	font_size: self.width / 3.3


<BackButton@StringButton>:
	font_size: self.width / 3

<GameScreen>:
	MDBoxLayout:
		orientation: 'vertical'
		size: root.size

		MDBoxLayout:
			orientation: 'horizontal'
			size_hint_y: .2
			spacing: 10
			padding: 30, 10
			# restart button
			MDFloatingActionButton:
				icon: 'res/images/restart.png'
				#size_hint: (None, None)
				size: (self.parent.height * .65, self.parent.height * .65)
				on_press: root.restart()

			MDLabel:
				id: resultlabel
				text: ''
				text_size: self.size
				font_size: self.width / (len(self.text) + 5)
				halign: 'center'
				valign: 'middle'

		MDBoxLayout:
			MDGridLayout:
				id: stringboxes
				spacing: 10
				padding: 30, 10

		MDBoxLayout:
			id: board
			orientation: 'vertical'
			size_hint: (1, None)
