<HowtoScreen>:
	MDBoxLayout:
		orientation: 'vertical'
		size: root.size
		padding: 30

	    MDFloatLayout:
		    MDLabel:
		    	text: 'How to Play'
				halign: "center"
		    	font_size: root.width / 8
		    	pos_hint: {'center_x': .5, 'y': .1}

		MDFloatLayout:
			MDLabel:
				text:
					'Guess 5 letter word using colour hints'
		        font_size: root.width / 16
		        text_size: self.size
		        padding_x: 10
		        halign: 'center'
		        pos_hint: {'center_x': .5, 'y': .9}

		MDFloatLayout:
			MDGridLayout:
				cols: 3
				spacing: 5
				pos_hint: {'center_x': .5, 'y': .6}

				MDLabel:
					text: ''
					size_hint_x: None
					width: root.width * 0.2
					canvas.before:
						Color:
				            rgba: app.correct_color
				        Rectangle:
				            pos: self.pos
				            size: self.size

				MDLabel:
					text: '-'
					valign: 'middle'
					halign: 'center'
					font_size: self.width / 1.5
					size_hint_x: None
					width: root.width * 0.1
					text_size: self.size

				MDLabel:
					text: 'Both letters and positions are correct'
					font_size: root.width / 20
					size_hint_x: None
					width: root.width * 0.5
					text_size: self.size
					halign: 'left'
					valign: 'middle'

				MDLabel:
					text: ''
					size_hint_x: None
					width: root.width * 0.2
					canvas.before:
						Color:
				            rgba: app.close_color
				        Rectangle:
				            pos: self.pos
				            size: self.size

				MDLabel:
					text: '-'
					valign: 'middle'
					halign: 'center'
					font_size: self.width / 1.5
					size_hint_x: None
					width: root.width * 0.1
					text_size: self.size

				MDLabel:
					text: 'Characters in wrong position'
					font_size: root.width / 20
					text_size: self.size
					halign: 'left'
					valign: 'middle'
					size_hint_x: None
					width: root.width * 0.5

				MDLabel:
					text: ''
					size_hint_x: None
					width: root.width * 0.2
					canvas.before:
						Color:
				            rgba: app.miss_color
				        Rectangle:
				            pos: self.pos
				            size: self.size

				MDLabel:
					text: '-'
					valign: 'middle'
					halign: 'center'
					font_size: self.width / 1.5
					size_hint_x: None
					width: root.width * 0.1
					text_size: self.size

				MDLabel:
					text: 'Wrong letters and position'
					font_size: root.width / 20
					text_size: self.size
					halign: 'left'
					valign: 'middle'
					size_hint_x: None
					width: root.width * 0.5
