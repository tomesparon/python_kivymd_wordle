<NavigationBar>:
	manager: screen_manager
    orientation: 'vertical'

    Manager:
        id: screen_manager


    MDBottomNavigation:
        # size hint Important to keep bar down
        size_hint_y: 0.09
	    # background_color: (1, 1, 1, 1)
		# canvas.before:
	    #     Color:
	    #         rgba: (0, 0, 0, 1)
	        # Line:
	        #     width: 1
	        #     rectangle: (self.x, self.y, self.width, self.height)
        id:bottom_nav

        MDBottomNavigationItem:
            id: home_nav
            name: 'home'
            text: 'Home'
            icon: 'home'
            on_tab_release: root.manager.current = 'home'


        MDBottomNavigationItem:
            id: howto_nav
            name: 'howto'
            text: 'Help'
            icon: 'help-rhombus'
            on_tab_release: root.manager.current = 'howto'


        MDBottomNavigationItem:
            id: game_nav
            name: 'game'
            text: 'Play'
            icon: 'grid'
            on_tab_release: root.manager.current = 'game'
<Manager>:

    HomeScreen:
        name: 'home'

    HowtoScreen:
        name: 'howto'

    GameScreen:
        name: 'game'

