<NavigationBar>:
	manager: screen_manager
    orientation: 'vertical'
    MDTopAppBar:
        title: ""
        elevation: 5
        md_bg_color: app.theme_cls.primary_color
        # left_action_items: [["menu", lambda x: root.callback1()]]
        right_action_items:
            [
            ["theme-light-dark", lambda x: root.manager.switch_themetoggle(), "Change Theme"]
            ]
    Manager:
        id: screen_manager


    MDBottomNavigation:
        # size hint Important to keep bar down
        size_hint_y: 0.09
        id:bottom_nav

        MDBottomNavigationItem:
            id: home_nav
            name: 'home'
            text: 'Home'
            icon: 'home'
            on_tab_release: root.manager.current = 'home'


        MDBottomNavigationItem:
            id: howto_nav
            name: 'howto'
            text: 'Help'
            icon: 'help-rhombus'
            on_tab_release: root.manager.current = 'howto'


        MDBottomNavigationItem:
            id: game_nav
            name: 'game'
            text: 'Play'
            icon: 'grid'
            on_tab_release: root.manager.current = 'game'
<Manager>:

    HomeScreen:
        id: homeclass
        name: 'home'

    HowtoScreen:
        id: howtoclass
        name: 'howto'

    GameScreen:
        id: gameclass
        name: 'game'

